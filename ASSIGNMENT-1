// program to sum of two numbers.

#include <iostream>
using namespace std;
class add
{
 private:
  int a,b;
  
 public:
 int number()
    { cout<<"enter the values of a and b"<<endl;
    cin>>a>>b;
    }
    int sum(int a,int b)
    {
   int result(a+b);	
	}
   void display()
    {
	  cout<<"sum :"<<a+b<<endl;
    }
 			
};
int main()
{
add s;
int a,b;
s.number();
s.sum(a,b);
s.display();
return 0;	
}

